on","pages","publisher","created","lastSeen","title","msg","confirmOption","methods","deleteBook","bookId","$router","push"],"sourceRoot":"","sources":["C:\\Users\\felip\\Desktop\\Tot Bookstore\\src\\views\\BookView.vue"],"sourcesContent":["<template>\r\n\r\n    <div class=\"book-details\">\r\n\r\n        <div class=\"book-cover\">\r\n            <img :src=\"book.coverImg\">\r\n        </div>\r\n\r\n        <div class=\"book-details-info\">\r\n            \r\n            <p><span class=\"label\">{{book.title}}</span></p>\r\n            \r\n            <p v-if=\"book.description\">{{book.description}}</p>\r\n\r\n            <p>\r\n                <audio controls>\r\n                    <source src=\"@/audio/heheBoi.mp3\" type=\"audio/mp3\">\r\n                </audio>\r\n            </p>\r\n\r\n\r\n            <p v-if=\"!author\">\r\n                <span class=\"label\">Autor:</span> \r\n                {{book.author}} \r\n                <span class=\"edit\" v-show=\"session.user.admin\" @click=\"()=> author = !author\">Editar</span>\r\n            </p>\r\n            \r\n            <p v-else>\r\n                <span class=\"label\">Autor:</span> \r\n                <input type=\"text\" v-model=\"book.author\"> \r\n                <span class=\"edit\" @click=\"()=> {author = !author; books.updateBook(book)}\">Salvar</span>\r\n            </p>\r\n\r\n\r\n            <p v-if=\"!edition\">\r\n                <span class=\"label\">Edição:</span> \r\n                {{book.edition}} \r\n                <span class=\"edit\" v-show=\"session.user.admin\" @click=\"()=> edition = !edition\">Editar</span>\r\n            </p>\r\n            \r\n            <p v-else>\r\n                <span class=\"label\">Edição:</span> \r\n                <input type=\"text\" v-model=\"book.edition\"> \r\n                <span class=\"edit\" @click=\"()=> {edition = !edition; books.updateBook(book)}\">Salvar</span>\r\n            </p>\r\n\r\n\r\n\r\n            <p v-if=\"!pages\">\r\n                <span class=\"label\">Nº de páginas:</span> \r\n                {{book.pages}} \r\n                <span class=\"edit\" v-show=\"session.user.admin\" @click=\"()=> pages = !pages\">Editar</span>\r\n            </p>\r\n            \r\n            <p v-else>\r\n                <span class=\"label\">Nº de páginas:</span> \r\n                <input type=\"number\" step=\"1\" v-model=\"book.pages\"> \r\n                <span class=\"edit\" @click=\"()=> {pages = !pages; books.updateBook(book)}\">Salvar</span>\r\n            </p>\r\n\r\n\r\n\r\n            <p v-if=\"book.publisher\"><span class=\"label\">Editora:</span> {{book.publisher}}</p>\r\n\r\n            <p v-if=\"!pages\">\r\n                <span class=\"label\">Nº de páginas:</span> \r\n                {{book.pages}} \r\n                <span class=\"edit\" v-show=\"session.user.admin\" @click=\"()=> pages = !pages\">Editar</span>\r\n            </p>\r\n            \r\n            <p v-else>\r\n                <span class=\"label\">Nº de páginas:</span> \r\n                <input type=\"text\" v-model=\"book.pages\"> \r\n                <span class=\"edit\" @click=\"()=> {pages = !pages; books.updateBook(book)}\">Salvar</span>\r\n            </p>\r\n\r\n\r\n            <p v-if=\"book.publishDate\"><span class=\"label\">Data de Publicação:</span> {{book.publishDate}}</p>\r\n            \r\n            \r\n            <p v-if=\"book.price && book.quantity > 0\" class=\"priceBox\"> \r\n                <span class=\"label\"> R$ {{book.price}} </span><AddtoCart :book=\"book\"/>\r\n            </p> \r\n            <p v-else>Indisponível</p>\r\n\r\n            <div v-if=\"session.isLoggedIn && session.user.admin\">\r\n\r\n                <p class=\"priceBox\"><span class=\"label\">Quantidade em Estoque:</span> {{book.quantity}}</p>\r\n\r\n                <p >\r\n                    <Confirmation :data=\"data\" @confirm=\"deleteBook(book.id)\"/><br>\r\n                    \r\n                    <button>Atualizar informações</button>\r\n                \r\n                </p>\r\n\r\n            </div>\r\n            \r\n\r\n        </div>\r\n\r\n    </div>\r\n\r\n</template>\r\n\r\n\r\n<script>\r\n\r\nimport AddtoCart from '@/components/AddtoCart.vue';\r\nimport Confirmation from '@/components/Confirmation.vue';\r\nimport { bookStore } from '@/store/books';\r\nimport { sessionStore } from '@/store/session';\r\n\r\nexport default\r\n {\r\n \r\n    name: \"Book\",\r\n\r\n    components: {\r\n        AddtoCart,\r\n        Confirmation \r\n    },\r\n\r\n    data(){\r\n\r\n        return{\r\n\r\n            book: null,\r\n            books: null,\r\n            session: null,\r\n            data: null,\r\n            author:false,\r\n            edition:false,\r\n            pages: false,\r\n            publisher: false\r\n\r\n        }\r\n\r\n    },\r\n\r\n    created(){\r\n\r\n        this.books = bookStore()\r\n        this.book = this.books.lastSeen\r\n        this.session = sessionStore()\r\n\r\n        this.data = {\r\n\r\n            title: \"Excluir\",\r\n            msg: \"Tem certeza que deseja excluir este Livro?\",\r\n            confirmOption: \"Excluir\"\r\n        }\r\n\r\n    },\r\n\r\n    methods:{\r\n\r\n        deleteBook(bookId){\r\n\r\n            this.books.deleteBook(bookId)\r\n\r\n            //confirmacao\r\n            //verificar o carrinhho\r\n\r\n            this.$router.push(\"/\");\r\n\r\n        },\r\n\r\n    }\r\n \r\n }\r\n\r\n</script>\r\n\r\n<style scoped>\r\n.label{\r\n    font-weight: bold;\r\n}\r\n\r\n.edit{\r\n\r\n    cursor: pointer;\r\n    color:var(--dark-blue);\r\n\r\n}\r\n.edit:hover{\r\n\r\n    color:var(--blue);\r\n    \r\n\r\n}\r\n</style>"]},"metadata":{},"sourceType":"module","externalDependencies":[]}