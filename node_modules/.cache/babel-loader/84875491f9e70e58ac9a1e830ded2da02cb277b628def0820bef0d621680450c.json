{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nexport default {\n  name: \"Cart\",\n  data() {\n    return {\n      cart: null\n    };\n  },\n  watch: {\n    cart: {\n      handler(newValue, oldValue) {\n        this.cart.items[this.searchCart(book)].qtde = newValue;\n        localStorage.setItem(\"cart\", JSON.stringify(this.cart));\n      },\n      deep: true\n    }\n  },\n  created() {\n    this.cart = localStorage.getItem(\"cart\");\n    if (this.cart) this.cart = JSON.parse(this.cart);else this.cart = {};\n  },\n  computed: {\n    totalPrice() {\n      let total = 0;\n      if (this.cart != null) {\n        for (let item of this.cart.items) total += item.qtde * item.price;\n      }\n      return total;\n    }\n  },\n  methods: {\n    searchCart(book) {\n      let index = -1;\n      for (const [i, item] of this.cart.items.entries()) {\n        if (book.bookId === item.bookId) {\n          index = i;\n          break;\n        }\n      }\n      return index;\n    },\n    removeItem(book) {\n      let index = this.searchCart(book);\n      if (index != -1) this.cart.items.splice(index, 1);\n      localStorage.setItem(\"cart\", JSON.stringify(this.cart));\n    },\n    bookDetail(book) {\n      localStorage.setItem(\"book\", JSON.stringify(book));\n      this.$router.push(\"/book\");\n    },\n    increase(book) {\n      this.cart.items[this.searchCart(book)].qtde++;\n      localStorage.setItem(\"cart\", JSON.stringify(this.cart));\n    },\n    decrease(book) {\n      if (this.cart.items[this.searchCart(book)].qtde > 1) {\n        this.cart.items[this.searchCart(book)].qtde--;\n        localStorage.setItem(\"cart\", JSON.stringify(this.cart));\n      }\n    }\n  }\n};","map":{"version":3,"mappings":";AAkFA,eAAc;EAEVA,IAAI,EAAE,MAAM;EAEZC,IAAI,GAAE;IAEF,OAAM;MAEFC,IAAI,EAAE;IAEV;EAEJ,CAAC;EAEDC,KAAK,EAAE;IAEHD,IAAI,EAAE;MAEFE,OAAO,CAACC,QAAQ,EAAEC,QAAQ,EAAE;QAExB,IAAI,CAACJ,IAAI,CAACK,KAAK,CAAC,IAAI,CAACC,UAAU,CAACC,IAAI,CAAC,CAAC,CAACC,IAAG,GAAIL,QA