{"ast":null,"code":"export default {\n  name: \"Cart\",\n  data() {\n    return {\n      cart: null\n    };\n  },\n  created() {\n    this.cart = localStorage.getItem(\"cart\");\n    if (this.cart) this.cart = JSON.parse(this.cart);else this.cart = {};\n  },\n  computed: {\n    totalPrice() {\n      let total = 0;\n      if (this.cart != null) {\n        for (let item of this.cart.items) total += item.qtde * item.price;\n      }\n      return total;\n    }\n  },\n  methods: {\n    searchCart(book) {\n      let index = -1;\n      for (const [i, item] of this.cart.items.entries()) {\n        if (book.bookId === item.bookId) {\n          index = i;\n          break;\n        }\n      }\n      return index;\n    },\n    removeItem(book) {\n      let index = this.searchCart(book);\n      if (index != -1) this.cart.items.splice(index, 1);\n      localStorage.setItem(\"cart\", JSON.stringify(this.cart));\n    }\n  }\n};","map":{"version":3,"mappings":"AAqEA,eAAc;EAEVA,IAAI,EAAE,MAAM;EAEZC,IAAI,GAAE;IAEF,OAAM;MAEFC,IAAI,EAAE;IAEV;EAEJ,CAAC;EAEDC,OAAO,GAAE;IAEL,IAAI,CAACD,IAAG,GAAIE,YAAY,CAACC,OAAO,CAAC,MAAM;IAEvC,IAAG,IAAI,CAACH,IAAI,EAAE,IAAI,CAACA,IAAG,GAAII,IAAI,CAACC,KAAK,CAAC,IAAI,CAACL,IAAI,OACzC,IAAI,CAACA,IAAG,GAAI,CAAC;EAEtB,CAAC;EAEDM,QAAQ,EAAC;IAELC,UAAU,GAAE;MAER,IAAIC,KAAI,GAAI;MAEZ,IAAG,IAAI,CAACR,IAAG,IAAK,IAAI,EACpB;QAEI,KAAI,IAAIS,IAAG,IAAK,IAAI,CAACT,IAAI,CAACU,KAAK,EAAEF,KAAI,IAAKC,IAAI,CAACE,IAAG,GAAIF,IAAI,CAACG,KAAI;MAEnE;MAEA,OAAOJ,KAAI;IAEf;EAEJ,CAAC;EAEDK,OAAO,EAAC;IAEJC,UAAU,CAACC,IAAI,EAAC;MAEZ,IAAIC,KAAI,GAAI,CAAC;MAEb,KAAI,MAAM,CAACC,CAAC,EAAER,IAAI,KAAK,IAAI,CAACT,IAAI,CAACU,KAAK,CAACQ,OAAO,EAAE,EAChD;QAEI,IAAGH,IAAI,CAACI,MAAK,KAAMV,IAAI,CAACU,MAAM,EAC9B;UAEIH,KAAI,GAAIC;UACR;QAEJ;MAEJ;MAEA,OAAOD,KAAI;IAEf,CAAC;IAEDI,UAAU,CAACL,IAAI,EAAC;MAEZ,IAAIC,KAAI,GAAI,IAAI,CAACF,UAAU,CAACC,IAAI;MAEhC,IAAGC,KAAI,IAAK,CAAC,CAAC,EAAE,IAAI,CAAChB,IAAI,CAACU,KAAK,CAACW,MAAM,CAACL,KAAK,EAAE,CAAC;MAE/Cd,YAAY,CAACoB,OAAO,CAAC,MAAM,EAAElB,IAAI,CAACmB,SAAS,CAAC,I